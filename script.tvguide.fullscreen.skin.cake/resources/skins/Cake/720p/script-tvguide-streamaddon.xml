<?xml version="1.0" encoding="utf-8"?>
<window type="dialog">
    <allowoverlay>no</allowoverlay>
    <defaultcontrol always="true">1000</defaultcontrol>
    <coordinates>
        <system>1</system>
        <posx>0</posx>
        <posy>0</posy>
    </coordinates>
    <controls>
        <!-- # mouse invisible exit -->
        <control type="button">
            <texturefocus></texturefocus>
            <texturenofocus></texturenofocus>
            <description>invisible exit</description>
            <posx>0</posx>
            <posy>0</posy>
            <width>1280</width>
            <height>720</height>
            <onclick>back</onclick>
        </control>
        <!-- # flip adjust -->
        <control type="group">
            <description>Main Popup Menu Control Group</description>
            <posx>0</posx>
            <!--flip1-->
            <posy>240</posy>
            <width>1280</width>
            <height>445</height>
            <animation effect="slide" start="0,0" end="0,-210" time="0" condition="String.IsEqual(Window(1100).Property(flip_vertical),true)">Conditional</animation>
            <control type="image">
                <posx>0</posx>
                <posy>0</posy>
                <width>1280</width>
                <height>445</height>
                <texture>$INFO[Window(1100).Property(image_fadebg)]</texture>
            </control>
            <!-- # Multiple addons provide this channel label -->
            <control type="label" id="4000">
                <posx>0</posx>
                <posy>15</posy>
                <width>1280</width>
                <height>30</height>
                <textcolor>dimgrey</textcolor>
                <align>center</align>
                <aligny>center</aligny>
                <font>font13</font>
                <label>[B]Multiple Channel Addons[/B]</label>
                <wrapmultiline>true</wrapmultiline>
                <visible>false</visible>
            </control>
            <!-- # Addon Logo -->
            <control type="image" id="4025">
                <texture></texture>
                <description>Addon Logo</description>
                <posx>20</posx>
                <posy>15</posy>
                <!--<posx>520</posx>
                <posy>160</posy>-->
                <width>30</width>
                <height>30</height>
                <aspectratio>keep</aspectratio>
                <visible>true</visible>
            </control>
            <!-- # Addon Name -->
            <control type="label" id="4026">
                <label></label>
                <description>Addon Name</description>
                <!--<posx>570</posx>
                <posy>40</posy>-->
                <posx>20</posx>
                <posy>50</posy>
                <width>200</width>
                <height>30</height>
                <textcolor>white</textcolor>
                <align>left</align>
                <aligny>center</aligny>
                <visible>true</visible>
            </control>
            <!--
            <control type="image">
                    <posx>190</posx>
                    <posy>290</posy>
                    <width>128</width>
                    <height>128</height>
                    <aspectratio>keep</aspectratio>
                    <info>Container(1000).ListItem.Icon</info>
                </control>
                -->
            <control type="label">
                <posx>0</posx>
                <posy>360</posy>
                <width>1280</width>
                <height>40</height>
                <align>center</align>
                <font>font_MainMenu</font>
                <textcolor>ffffffff</textcolor>
                <info>Container(1000).ListItem.Label</info>
            </control>
            <control type="fixedlist" id="1000">
                <posx>0</posx>
                <posy>100</posy>
                <width>1280</width>
                <height>180</height>
                <viewtype label="list">list</viewtype>
                <orientation>horizontal</orientation>
                <focusposition>3</focusposition>
                <pagecontrol>1001</pagecontrol>
                <itemlayout width="200" height="200">
                    <control type="image">
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>200</width>
                        <height>20180</height>
                        <texture>buttons/tvg-button-nofocus.png</texture>
                        <visible>false</visible>
                    </control>
                    <control type="image">
                        <posx>31</posx>
                        <posy>16</posy>
                        <width>128</width>
                        <height>128</height>
                        <info>ListItem.Icon</info>
                    </control>
                    <control type="label">
                        <posx>0</posx>
                        <posy>150</posy>
                        <width>200</width>
                        <height>40</height>
                        <align>center</align>
                        <font>font10</font>
                        <textcolor>ffffffff</textcolor>
                        <info>ListItem.Label</info>
                    </control>
                </itemlayout>
                <focusedlayout width="200" height="200">
                    <control type="image">
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>200</width>
                        <height>180</height>
                        <texture>buttons/tvg-button-focus.png</texture>
                        <visible>Control.HasFocus(1000)</visible>
                    </control>
                    <control type="image">
                        <posx>35</posx>
                        <posy>16</posy>
                        <width>128</width>
                        <height>128</height>
                        <aspectratio>keep</aspectratio>
                        <info>ListItem.Icon</info>
                    </control>
                    <control type="label">
                        <posx>0</posx>
                        <posy>150</posy>
                        <width>200</width>
                        <height>40</height>
                        <align>center</align>
                        <font>font10</font>
                        <textcolor>ffffffff</textcolor>
                        <info>ListItem.Label</info>
                    </control>
                </focusedlayout>
            </control>
            <control type="scrollbar" id="1001">
                <description>scroll bar control</description>
                <posx>200</posx>
                <posy>280</posy>
                <width>880</width>
                <height>30</height>
                <pulseonselect>true</pulseonselect>
                <orientation>horizontal</orientation>
                <showonepage>false</showonepage>
                <onup>1000</onup>
                <ondown>1000</ondown>
                <texturesliderbackground colordiffuse="$INFO[Window(1100).Property(scrollbarbg_color)]">scrollbar/scrollbar.png</texturesliderbackground>
                <textureslidernib></textureslidernib>
                <textureslidernibfocus></textureslidernibfocus>
                <texturesliderbar colordiffuse="$INFO[Window(1100).Property(scrollbarnf_color)]">scrollbar/scrollbar.png</texturesliderbar>
                <texturesliderbarfocus colordiffuse="$INFO[Window(1100).Property(focus_current_color)]">scrollbar/scrollbar.png</texturesliderbarfocus>
                <animation effect="fade" start="0" end="100" time="200" delay="300">Visible</animation>
                <animation effect="fade" start="100" end="0" time="200">Hidden</animation>
                <visible>Integer.IsGreater(Container(1000).NumItems,4)</visible>
            </control>
        </control>
    </controls>
</window>
