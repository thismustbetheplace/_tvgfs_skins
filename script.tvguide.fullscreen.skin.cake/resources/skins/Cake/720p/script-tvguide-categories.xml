<!--
    C_CAT_BACKGROUND = 7000
    C_CAT_QUIT = 7003
    C_CAT_CATEGORY = 7004
    C_CAT_SET_CATEGORY = 7005  disabled   does nothing
-->
<window type="dialog">
    <allowoverlay>no</allowoverlay>
    <!--<defaultcontrol always="false">7004</defaultcontrol>-->
    <coordinates>
        <!--<system>1</system>-->
        <posx>0</posx>
        <posy>0</posy>
    </coordinates>
    <controls>
        <!-- # invisible osd exit -->
        <control type="button">
            <texturefocus></texturefocus>
            <texturenofocus></texturenofocus>
            <description>invisible exit</description>
            <posx>0</posx>
            <!--<posx>180</posx>-->
            <posy>0</posy>
            <width>1280</width>
            <height>685</height>
            <onclick>back</onclick>
        </control>
        <!-- # Category align bottom  -->
        <control type="group">
            <description>Main Texture Backgrounds</description>
            <posx>0</posx>
            <!--<posx>180</posx>-->
            <posy>685</posy>
            <!-- dark layer -->
            <control type="image">
                <description>dark layer</description>
                <posx>0</posx>
                <posy>0</posy>
                <width>1280</width>
                <height>35</height>
                <texture>black.png</texture>
            </control>
            <!-- Cat Background colour from settings -->
            <control type="image" id="7000">
                <posx>1</posx>
                <posy>1</posy>
                <width>1278</width>
                <height>33</height>
                <colordiffuse>blue</colordiffuse>
                <texture>$INFO[Window(1100).Property(image_fadewhite)]</texture>
                <!--<texture>white.png</texture>-->
            </control>
            <!-- extra dark layer -->
            <control type="image">
                <description>extra dark layer</description>
                <posx>0</posx>
                <posy>0</posy>
                <width>1280</width>
                <height>35</height>
                <texture>$INFO[Window(1100).Property(image_fadebg)]</texture>
            </control>
            <!-- # quit -->
            <control type="button" id="7003">
                <label></label>
                <description>quit</description>
                <posx>0</posx>
                <posy>8</posy>
                <width>18</width>
                <height>18</height>
                <aligny>center</aligny>
                <align>center</align>
                <textcolor>grey</textcolor>
                <focusedcolor>black</focusedcolor>
                <texturefocus>icons/left.png</texturefocus>
                <texturenofocus>icons/left.png</texturenofocus>
            </control>
            <!-- Search program category -->
