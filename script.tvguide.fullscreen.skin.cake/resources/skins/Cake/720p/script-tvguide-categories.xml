            <!-- MAIN  -->
            <control type="list" id="7004">
                <left>21</left>
                <posy>0</posy>
                <width>1280</width>
                <height>40</height>
                <orientation>horizontal</orientation>
                <onright>SetFocus($INFO[Container(7004).ListItem.Property(menu_id)])</onright>
                <scrolltime tween="cubic" easing="out">500</scrolltime>
                <onleft>7004</onleft>
                <onright>7004</onright>
                <focusedlayout height="38" width="142">
                    <control type="image">
                        <left>2</left>
                        <right>2</right>
                        <bottom>0</bottom>
                        <texture colordiffuse="$INFO[Window(1100).Property(focus_color)]">buttons/panel-focus.png</texture>
                    </control>
                    <control type="image">
                        <left>2</left>
                        <right>2</right>
                        <bottom>0</bottom>
                        <texture colordiffuse="$INFO[Window(1100).Property(focus_current_color)]">buttons/panel-focus.png</texture>
                        <animation effect="fade" start="100" end="0" time="0" condition="!Control.HasFocus(7004)">Conditional</animation>
                    </control>
                    <control type="image">
                        <left>0</left>
                        <width>33</width>
                        <bottom>0</bottom>
                        <texture colordiffuse="51FFFFFF">black.png</texture>
                        <animation effect="fade" start="100" end="0" time="0" condition="!Control.HasFocus(7004)">Conditional</animation>
                    </control>
                    <control type="image">
                        <left>-2</left>
                        <top>0</top>
                        <width>33</width>
                        <bottom>0</bottom>
                        <!--<texture colordiffuse="FFFFFFFF">$INFO[ListItem.Art(thumb)]</texture>-->
                        <texture fallback="categories/Default.png" colordiffuse="FFFFFFFF">$INFO[ListItem.Label,categories/,.png]</texture>
                    </control>
                    <control type="label">
                        <left>39</left>
                        <bottom>0</bottom>
                        <right>7</right>
                        <aligny>center</aligny>
                        <font>font10</font>
                        <label>$INFO[ListItem.Label]</label>
                        <shadowcolor>black</shadowcolor>
                    </control>
                </focusedlayout>
                <itemlayout height="38" width="142">
                    <control type="image">
                        <left>-2</left>
                        <top>0</top>
                        <width>33</width>
                        <bottom>0</bottom>
                        <!--<texture colordiffuse="FFFFFFFF">$INFO[ListItem.Art(thumb)]</texture>-->
                        <texture fallback="categories/Default.png" colordiffuse="FFFFFFFF">$INFO[ListItem.Label,categories/,.png]</texture>
                    </control>
                    <control type="label">
                        <left>39</left>
                        <bottom>0</bottom>
                        <right>7</right>
                        <aligny>center</aligny>
                        <font>font10</font>
                        <label>$INFO[ListItem.Label]</label>
                        <shadowcolor>black</shadowcolor>
                    </control>
                </itemlayout>
            </control>
