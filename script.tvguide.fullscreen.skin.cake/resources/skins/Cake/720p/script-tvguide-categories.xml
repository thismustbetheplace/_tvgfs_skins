<?xml version="1.0" encoding="utf-8"?>
<!--
    C_CAT_BACKGROUND = 7000
    C_CAT_QUIT = 7003
    C_CAT_CATEGORY = 7004
    C_CAT_SET_CATEGORY = 7005  disabled   does nothing
-->
<window type="dialog">
    <allowoverlay>no</allowoverlay>
    <!--<defaultcontrol always="false">7004</defaultcontrol>-->
    <coordinates>
        <!--<system>1</system>-->
        <posx>0</posx>
        <posy>0</posy>
    </coordinates>
    <controls>
        <!-- # invisible osd exit -->
        <control type="button">
            <texturefocus></texturefocus>
            <texturenofocus></texturenofocus>
            <description>invisible exit</description>
            <posx>0</posx>
            <posy>0</posy>
            <width>1280</width>
            <height>687</height>
            <onclick>back</onclick>
        </control>
        <!-- # Category align bottom  -->
        <control type="group">
            <description>Main Texture Workaround Backgrounds</description>
            <posx>0</posx>
            <posy>685</posy>
            <!-- Cat Background colour from settings -->
            <control type="image" id="7000">
                <posx>0</posx>
                <posy>0</posy>
                <width>1280</width>
                <height>35</height>
                <texture>white.png</texture>
                <visible>true</visible>
            </control>
            <!-- extra dark layer -->
            <control type="image">
                <description>extra dark layer</description>
                <posx>0</posx>
                <posy>0</posy>
                <width>1280</width>
                <height>35</height>
                <texture>backgrounds/clear-black.png</texture>
            </control>
            <!-- cat bar image header background -->
            <control type="image">
                <description>cat bar image header background</description>
                <posx>0</posx>
                <posy>0</posy>
                <width>1280</width>
                <height>35</height>
                <texture>tvg-program-nofocus.png</texture>
                <!--<visible>!Control.HasFocus(7000)</visible>-->
            </control>
            <!-- # quit -->
            <control type="button" id="7003">
                <label></label>
                <description>quit</description>
                <posx>0</posx>
                <posy>8</posy>
                <width>18</width>
                <height>18</height>
                <aligny>center</aligny>
                <align>center</align>
                <textcolor>grey</textcolor>
                <focusedcolor>black</focusedcolor>
                <texturefocus>buttons/actionbar/left.png</texturefocus>
                <texturenofocus>buttons/actionbar/left.png</texturenofocus>
            </control>
            <!-- Search program category -->
            <!--
        <control type="button" id="7005">
            <label></label>
            <description>Search program category</description>
            <posx>1220</posx>
            <posy>0</posy>
            <width>28</width>
            <height>28</height>
            <font>font10</font>
            <align>center</align>
            <aligny>center</aligny>
            <textcolor>grey</textcolor>
            <focusedcolor>yellow</focusedcolor>
            <texturefocus>tvg-button-focus.png</texturefocus>
            <texturenofocus>buttons/actionbar/search.png</texturenofocus>
            <onright>7004</onright>
            <onleft>7004</onleft>
            <onclick></onclick>
            <visible>false</visible>
        </control>
        -->
            <!-- # categories list array -->
            <control type="list" id="7004">
                <description>categories</description>
                <left>20</left>
                <top>2</top>
                <width>1260</width>
                <height>30</height>
                <viewtype label="3D list">list</viewtype>
                <orientation>horizontal</orientation>
                <itemlayout width="160" height="30">
                    <control type="image">
                        <posx>1</posx>
                        <posy>2</posy>
                        <width>158</width>
                        <height>26</height>
                        <texture>backgrounds/clear-black.png</texture>
                        <visible>true</visible>
                    </control>
                    <control type="label">
                        <left>0</left>
                        <top>2</top>
                        <width>160</width>
                        <height>26</height>
                        <align>center</align>
                        <aligny>center</aligny>
                        <textcolor>white</textcolor>
                        <selectedcolor>black</selectedcolor>
                        <info>ListItem.Label</info>
                    </control>
                </itemlayout>
                <focusedlayout width="160" height="30">
                    <control type="image">
                        <posx>1</posx>
                        <posy>2</posy>
                        <width>158</width>
                        <height>26</height>
                        <texture>tvg-program-focus.png</texture>
                        <visible>true</visible>
                    </control>
                    <control type="label">
                        <left>0</left>
                        <top>2</top>
                        <width>160</width>
                        <height>26</height>
                        <align>center</align>
                        <aligny>center</aligny>
                        <textcolor>black</textcolor>
                        <selectedcolor>yellow</selectedcolor>
                        <info>ListItem.Label</info>
                    </control>
                </focusedlayout>
            </control>
        </control>
    </controls>
</window>
