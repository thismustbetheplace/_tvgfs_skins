<?xml version="1.0" encoding="utf-8"?>
<!-- # Languages disabled -->
<window type="dialog">
    <allowoverlay>no</allowoverlay>
    <defaultcontrol always="true">6000</defaultcontrol>
    <menucontrol>6004</menucontrol>
    <coordinates>
        <system>1</system>
        <posx>0</posx>
        <posy>0</posy>
    </coordinates>
    <controls>
        <!-- # visibility marker for selection box -->
        <control type="label" id="6001">
            <description>visibility marker for selection box</description>
        </control>
        <!-- # Backgrounds -->
        <control type="group">
            <posx>0</posx>
            <posy>0</posy>
            <control type="image">
                <posx>0</posx>
                <posy>0</posy>
                <width>1280</width>
                <height>720</height>
                <texture>black.png</texture>
            </control>
            <!-- # main Background -->
            <control type="image">
                <description>main mount</description>
                <posx>0</posx>
                <posy>0</posy>
                <width>1280</width>
                <height>720</height>
                <colordiffuse>$INFO[Window(1100).Property(popup_background_color)]</colordiffuse>
                <texture>white.png</texture>
            </control>
            <!-- # Background clear Black Default -->
            <control type="image">
                <description>background</description>
                <posx>0</posx>
                <posy>0</posy>
                <width>1280</width>
                <height>720</height>
                <texture>$INFO[Window(1100).Property(image_fadebg)]</texture>
            </control>
            <control type="image">
                <description>bottom buttons mount</description>
                <posx>10</posx>
                <posy>655</posy>
                <width>1260</width>
                <height>60</height>
                <colordiffuse>$INFO[Window(1100).Property(bar_color)]</colordiffuse>
                <texture>$INFO[Window(1100).Property(image_fadewhite)]</texture>
                <!--<texture>backgrounds/grey.png</texture>-->
            </control>
            <control type="image">
                <description>bottom buttons background</description>
                <posx>12</posx>
                <posy>657</posy>
                <width>1256</width>
                <height>56</height>
                <texture>$INFO[Window(1100).Property(image_fadebg)]</texture>
            </control>
            <!-- exit -->
            <control type="button">
                <texturefocus></texturefocus>
                <texturenofocus></texturenofocus>
                <label></label>
                <description>invisible Epg back</description>
                <posx>0</posx>
                <posy>0</posy>
                <height>720</height>
                <width>1280</width>
                <onclick>back</onclick>
            </control>
            <control type="image">
                <posx>20</posx>
                <posy>660</posy>
                <width>256</width>
                <height>45</height>
                <aspectratio>keep</aspectratio>
                <texture>backgrounds/headers/headerOnChannel.png</texture>
            </control>
            <!-- # Video window preview -->
            <control type="videowindow">
                <description>Main PIP video window</description>
                <posx>20</posx>
                <posy>430</posy>
                <width>340</width>
                <height>210</height>
                <aspectratio align="left">keep</aspectratio>
                <aligny>center</aligny>
            </control>
        </control>
        <!-- # Channels Group -->
        <control type="group">
            <posx>40</posx>
            <posy>280</posy>
            <width>600</width>
            <height>40</height>
            <visible>!Control.IsVisible(6001)</visible>
            <animation type="Visible">
                <effect type="slide" start="450,0" end="0,0" time="500" />
            </animation>
            <animation type="Hidden">
                <effect type="slide" start="0,0" end="450,0" time="500" />
            </animation>
            <control type="image">
                <posx>0</posx>
                <posy>20</posy>
                <width>600</width>
                <height>40</height>
                <texture>$INFO[Window(1100).Property(image_fade)]</texture>
            </control>
            <control type="image">
                <posx>0</posx>
                <posy>20</posy>
                <width>600</width>
                <height>40</height>
                <texture>$INFO[Window(1100).Property(image_fade)]</texture>
            </control>
            <control type="image">
                <posx>12</posx>
                <posy>20</posy>
                <width>16</width>
                <height>40</height>
                <texture>buttons/tvguide-channel-updownarrow.png</texture>
            </control>
            <control type="image">
                <posx>40</posx>
                <posy>20</posy>
                <width>560</width>
                <height>38</height>
            </control>
            <control type="button" id="6002">
                <posx>40</posx>
                <posy>20</posy>
                <width>560</width>
                <height>38</height>
                <aligny>center</aligny>
                <textcolor>white</textcolor>
                <label>text</label>
                <texturefocus>buttons/tvg-button-focus.png</texturefocus>
                <texturenofocus>buttons/tvg-button-nofocus.png</texturenofocus>
            </control>
        </control>
        <!-- # Edit Label -->
        <control type="label">
            <posx>50</posx>
            <posy>60</posy>
            <width>520</width>
            <height>40</height>
            <align>left</align>
            <aligny>center</aligny>
            <textcolor>yellow</textcolor>
            <label>[B]Edit channel order and visibility[/B]</label>
        </control>
        <!-- # Help and Tips Label -->
        <control type="label">
            <description>Help and Tips</description>
            <posx>50</posx>
            <posy>140</posy>
            <width>500</width>
            <height>400</height>
            <textcolor>white</textcolor>
            <align>left</align>
            <aligny>top</aligny>
            <wrapmultiline>true</wrapmultiline>
            <label>Move up and down to change the position of[CR]the channel. Select or navigate left to accept[CR]the position.</label>
        </control>
        <!-- # Channels list array -->
        <control type="image">
            <posx>638</posx>
            <posy>38</posy>
            <width>604</width>
            <height>604</height>
            <description>List Border</description>
            <texture>backgrounds/listborder400x360.png</texture>
        </control>
        <control type="list" id="6000">
            <posx>640</posx>
            <posy>40</posy>
            <width>600</width>
            <height>600</height>
            <viewtype label="list">list</viewtype>
            <orientation>vertical</orientation>
            <focusposition>9</focusposition>
            <onright>6100</onright>
            <pagecontrol>6100</pagecontrol>
            <itemlayout width="600" height="40">
                <control type="image">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>600</width>
                    <height>38</height>
                    <texture>buttons/tvg-button-nofocus.png</texture>
                </control>
                <control type="label">
                    <posx>20</posx>
                    <posy>0</posy>
                    <width>580</width>
                    <height>38</height>
                    <aligny>center</aligny>
                    <textcolor>white</textcolor>
                    <info>ListItem.Label</info>
                </control>
                <control type="image">
                    <posx>360</posx>
                    <posy>0</posy>
                    <width>100</width>
                    <height>38</height>
                    <aspectratio>keep</aspectratio>
                    <info>ListItem.Art(banner)</info>
                </control>
                <control type="image">
                    <posx>560</posx>
                    <posy>0</posy>
                    <width>40</width>
                    <height>40</height>
                    <info>ListItem.Icon</info>
                </control>
            </itemlayout>
            <focusedlayout width="600" height="40">
                <control type="image">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>600</width>
                    <height>38</height>
                    <texture>buttons/tvg-button-focus.png</texture>
                    <visible>!Control.HasFocus(6000)</visible>
                </control>
                <control type="image">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>600</width>
                    <height>38</height>
                    <texture>buttons/tvg-button-focus.png</texture>
                    <visible>Control.HasFocus(6000)</visible>
                </control>
                <control type="image">
                    <posx>8</posx>
                    <posy>0</posy>
                    <width>12</width>
                    <height>40</height>
                    <texture>buttons/tvguide-channel-leftarrow.png</texture>
                </control>
                <control type="label">
                    <posx>20</posx>
                    <posy>0</posy>
                    <width>580</width>
                    <height>38</height>
                    <aligny>center</aligny>
                    <textcolor>white</textcolor>
                    <label>[B]$INFO[ListItem.Label][/B]</label>
                </control>
                <control type="image">
                    <posx>360</posx>
                    <posy>0</posy>
                    <width>100</width>
                    <height>38</height>
                    <aspectratio>keep</aspectratio>
                    <info>ListItem.Art(banner)</info>
                </control>
                <control type="image">
                    <posx>560</posx>
                    <posy>0</posy>
                    <width>40</width>
                    <height>40</height>
                    <info>ListItem.Icon</info>
                </control>
            </focusedlayout>
        </control>
        <control type="scrollbar" id="6100">
            <description>scroll bar control</description>
            <posx>1242</posx>
            <posy>40</posy>
            <width>35</width>
            <height>600</height>
            <pulseonselect>true</pulseonselect>
            <orientation>vertical</orientation>
            <showonepage>false</showonepage>
            <onleft>6000</onleft>
            <onright>6004</onright>
            <texturesliderbackground colordiffuse="$INFO[Window(1100).Property(scrollbarbg_color)]">scrollbar/scrollbar.png</texturesliderbackground>
            <textureslidernib></textureslidernib>
            <textureslidernibfocus></textureslidernibfocus>
            <texturesliderbar colordiffuse="$INFO[Window(1100).Property(scrollbarnf_color)]">scrollbar/scrollbar.png</texturesliderbar>
            <texturesliderbarfocus colordiffuse="$INFO[Window(1100).Property(focus_current_color)]">scrollbar/scrollbar.png</texturesliderbarfocus>
            <animation effect="fade" start="0" end="100" time="200" delay="300">Visible</animation>
            <animation effect="fade" start="100" end="0" time="200">Hidden</animation>
            <!--<visible>Integer.IsGreater(Container(6000).NumItems,12)</visible>-->
        </control>
        <!-- # Cancel -->
        <control type="button" id="6004">
            <posx>300</posx>
            <posy>665</posy>
            <width>170</width>
            <height>40</height>
            <align>center</align>
            <aligny>center</aligny>
            <textcolor>white</textcolor>
            <focusedcolor>black</focusedcolor>
            <label>Cancel</label>
            <texturefocus>buttons/tvg-button-focus.png</texturefocus>
            <texturenofocus>buttons/tvg-button-nofocus.png</texturenofocus>
            <onleft>6006</onleft>
            <onright>6003</onright>
            <onup>6000</onup>
        </control>
        <!-- # Save -->
        <control type="button" id="6003">
            <posx>500</posx>
            <posy>665</posy>
            <width>170</width>
            <height>40</height>
            <align>center</align>
            <aligny>center</aligny>
            <textcolor>white</textcolor>
            <focusedcolor>black</focusedcolor>
            <label>Save</label>
            <texturefocus>buttons/tvg-button-focus.png</texturefocus>
            <texturenofocus>buttons/tvg-button-nofocus.png</texturenofocus>
            <onleft>6004</onleft>
            <onright>6005</onright>
            <onup>6000</onup>
        </control>
        <!-- # Chan Logo -->
        <control type="button" id="6005">
            <posx>700</posx>
            <posy>665</posy>
            <width>170</width>
            <height>40</height>
            <align>center</align>
            <aligny>center</aligny>
            <textcolor>white</textcolor>
            <focusedcolor>black</focusedcolor>
            <label>Chan Logo</label>
            <texturefocus>buttons/tvg-button-focus.png</texturefocus>
            <texturenofocus>buttons/tvg-button-nofocus.png</texturenofocus>
            <onleft>6003</onleft>
            <onright>6006</onright>
            <onup>6000</onup>
        </control>
        <!-- # All Logos -->
        <control type="button" id="6006">
            <posx>900</posx>
            <posy>665</posy>
            <width>170</width>
            <height>40</height>
            <align>center</align>
            <aligny>center</aligny>
            <textcolor>white</textcolor>
            <focusedcolor>black</focusedcolor>
            <label>All Logos</label>
            <texturefocus>buttons/tvg-button-focus.png</texturefocus>
            <texturenofocus>buttons/tvg-button-nofocus.png</texturenofocus>
            <onleft>6005</onleft>
            <onright>6004</onright>
            <onup>6000</onup>
        </control>
    </controls>
</window>
