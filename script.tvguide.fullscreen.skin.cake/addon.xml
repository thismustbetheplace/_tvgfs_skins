<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.tvguide.fullscreen.skin.cake" name="TV Guide Fullscreen - Cake Skin" version="0.0.1" provider-name="andy,primaeval">
    <requires>
        <import addon="xbmc.python" version="2.19.0"/>
        <!--<import addon="script.tvguide.fullscreen" version="0.0.321"/>-->
    </requires>
    <!-- used to run swift2 ini programs must be video and wont work as executable -->
    <extension point="xbmc.python.pluginsource" library="resources/lib/main.py">
        <provides>video</provides>
    </extension>
    <!-- used to run core add settings as a program addon failsafe -->
    <extension point="xbmc.python.script" library="addon.py">
            <provides>executable</provides>
    </extension>

    <extension point="xbmc.addon.metadata">
        <description lang="en">TVGuide Fullscreen skin</description>
        <disclaimer lang="en">Skin and ini players</disclaimer>
        <language></language>
        <platform>all</platform>
        <license>GPLv2</license>
        <forum>http://forum.kodi.tv/showthread.php?tid=282157</forum>
        <source>https://github.com/primaeval/script.tvguide.fullscreen</source>
        <website></website>
        <email>primaeval</email>
        <assets>
            <icon>icon.png</icon>
            <screenshot>resources/skins/Cake/screenshots/screenshot-01.jpg</screenshot>
            <screenshot>resources/skins/Cake/screenshots/screenshot-02.jpg</screenshot>
            <screenshot>resources/skins/Cake/screenshots/screenshot-03.jpg</screenshot>
        </assets>
    </extension>
</addon>
